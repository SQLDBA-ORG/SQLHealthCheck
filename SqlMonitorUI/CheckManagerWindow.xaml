<Window x:Class="SqlMonitorUI.CheckManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Check Manager" 
        Height="700" 
        Width="1613"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="FilterButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1" 
                                Padding="15,8"
                                Margin="5,0"
                                CornerRadius="4">
                            <TextBlock Text="{TemplateBinding Content}" 
                                       FontSize="13"
                                       Foreground="#333333"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="border" Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Manage SQL Health Checks" 
                   FontSize="24" 
                   FontWeight="SemiBold" 
                   Foreground="#333333"
                   Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="ImportButton" 
                    Content="ðŸ“¥ Import Checks" 
                    Click="ImportButton_Click"
                    Padding="12,8" 
                    Margin="0,0,10,0"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            
            <Button x:Name="ExportButton" 
                    Content="ðŸ“¤ Export to JSON" 
                    Click="ExportButton_Click"
                    Padding="12,8" 
                    Margin="0,0,10,0"
                    Background="#107C10"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            
            <Button x:Name="AddButton" 
                    Content="âž• Add Check" 
                    Click="AddButton_Click"
                    Padding="12,8" 
                    Margin="0,0,10,0"
                    Background="#6B69D6"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            
            <Button x:Name="DeleteButton" 
                    Content="ðŸ—‘ï¸ Delete Selected" 
                    Click="DeleteButton_Click"
                    Padding="12,8"
                    Background="#D83B01"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            
            <Button x:Name="BulkEditButton" 
                    Content="âš¡ Bulk Edit" 
                    Click="BulkEditButton_Click"
                    Padding="12,8"
                    Margin="10,0,0,0"
                    Background="#6B69D6"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"
                    ToolTip="Edit multiple selected checks at once"/>
        </StackPanel>

        <!-- Source Filter -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Filter by Source:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,15,0"
                       FontSize="13"
                       Foreground="#555555"/>
            
            <RadioButton x:Name="AllSourcesRadio" 
                         Content="All Sources" 
                         GroupName="SourceFilter"
                         IsChecked="True"
                         Checked="SourceFilter_Changed"
                         Style="{StaticResource FilterButtonStyle}"/>
            
            <RadioButton x:Name="SpBlitzRadio" 
                         Content="sp_Blitz" 
                         GroupName="SourceFilter"
                         Checked="SourceFilter_Changed"
                         Style="{StaticResource FilterButtonStyle}"/>
            
            <RadioButton x:Name="SpTriageRadio" 
                         Content="sp_triage" 
                         GroupName="SourceFilter"
                         Checked="SourceFilter_Changed"
                         Style="{StaticResource FilterButtonStyle}"/>
            
            <RadioButton x:Name="CustomRadio" 
                         Content="Custom" 
                         GroupName="SourceFilter"
                         Checked="SourceFilter_Changed"
                         Style="{StaticResource FilterButtonStyle}"/>
            
            <TextBlock x:Name="CountText"
                       Text="0 checks" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"
                       FontSize="13"
                       Foreground="#888888"/>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid x:Name="ChecksDataGrid" 
                  Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  SelectionMode="Extended"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F9F9F9"
                  RowBackground="White"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  FontSize="12"
                  CellEditEnding="ChecksDataGrid_CellEditEnding">
            
            <DataGrid.Columns>
                <!-- Enabled Checkbox -->
                <DataGridCheckBoxColumn Header="Enabled" 
                                        Binding="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="70"/>
                
                <!-- ID -->
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="120"
                                    IsReadOnly="True"/>
                
                <!-- Name -->
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="200"/>
                
                <!-- Source -->
                <DataGridTextColumn Header="Source" 
                                    Binding="{Binding Source}" 
                                    Width="100"
                                    IsReadOnly="True"/>
                
                <!-- Category -->
                <DataGridTextColumn Header="Category" 
                                    Binding="{Binding Category, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="120"/>
                
                <!-- Severity -->
                <DataGridComboBoxColumn Header="Severity" 
                                        Width="100"
                                        SelectedItemBinding="{Binding Severity, UpdateSourceTrigger=PropertyChanged}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                        <sys:String>Critical</sys:String>
                                        <sys:String>Warning</sys:String>
                                        <sys:String>Info</sys:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource">
                                <Setter.Value>
                                    <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                        <sys:String>Critical</sys:String>
                                        <sys:String>Warning</sys:String>
                                        <sys:String>Info</sys:String>
                                    </x:Array>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                
                <!-- Description -->
                <DataGridTextColumn Header="Description" 
                                    Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="400"
                                    MinWidth="50"/>
                <!-- SQL Cmd -->
                <DataGridTextColumn Header="SQL Cmd" 
                    Binding="{Binding SqlQuery, UpdateSourceTrigger=PropertyChanged}" 
                    Width="*"
                    MinWidth="50"/>


                <!-- Edit Query Button -->
                <DataGridTemplateColumn Header="SQL Query" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit SQL" 
                                    Click="EditSqlButton_Click"
                                    Tag="{Binding}"
                                    Padding="8,4"
                                    Background="#0078D4"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="11"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SaveButton" 
                    Content="ðŸ’¾ Save Changes" 
                    Click="SaveButton_Click"
                    Padding="15,10" 
                    Margin="0,0,10,0"
                    Background="#107C10"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
            
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Click="CloseButton_Click"
                    Padding="15,10"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
