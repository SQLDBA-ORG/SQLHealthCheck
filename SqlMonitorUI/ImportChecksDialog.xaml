<Window x:Class="SqlMonitorUI.ImportChecksDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import SQL Health Checks" 
        Height="550" 
        Width="650"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner"
        Background="White"
        ResizeMode="NoResize">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Select Scripts to Import" 
                   FontSize="20" 
                   FontWeight="SemiBold" 
                   Foreground="#333333"/>

        <!-- sp_Blitz Section -->
        <Border Grid.Row="2" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="15" 
                CornerRadius="4">
            <StackPanel>
                <CheckBox x:Name="SpBlitzCheckBox" 
                          Content="Import sp_Blitz Checks (210+ checks)"
                          FontSize="13"
                          FontWeight="SemiBold"
                          IsChecked="True"
                          Checked="SpBlitzCheckBox_Changed"
                          Unchecked="SpBlitzCheckBox_Changed"/>
                
                <TextBlock Text="Brent Ozar's comprehensive SQL Server health check script"
                           FontSize="11"
                           Foreground="#666666"
                           Margin="22,3,0,8"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="22,0,10,0" FontSize="11"/>
                    <TextBox x:Name="SpBlitzPathTextBox" Grid.Column="1" Padding="6" FontSize="11" IsReadOnly="True" Background="#F5F5F5"/>
                    <Button x:Name="BrowseSpBlitzButton" Grid.Column="2" Content="Browse..." Click="BrowseSpBlitzButton_Click"
                            Padding="8,6" Margin="8,0,0,0" FontSize="11" Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- sp_triage Section -->
        <Border Grid.Row="4" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="15" 
                CornerRadius="4">
            <StackPanel>
                <CheckBox x:Name="SpTriageCheckBox" 
                          Content="Import sp_triage Checks (35+ categories)"
                          FontSize="13"
                          FontWeight="SemiBold"
                          Checked="SpTriageCheckBox_Changed"
                          Unchecked="SpTriageCheckBox_Changed"/>
                
                <TextBlock Text="Adrian Sullivan's comprehensive SQL Server diagnostic script"
                           FontSize="11"
                           Foreground="#666666"
                           Margin="22,3,0,8"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="22,0,10,0" FontSize="11"/>
                    <TextBox x:Name="SpTriagePathTextBox" Grid.Column="1" Padding="6" FontSize="11" IsReadOnly="True" Background="#F5F5F5"/>
                    <Button x:Name="BrowseSpTriageButton" Grid.Column="2" Content="Browse..." Click="BrowseSpTriageButton_Click"
                            Padding="8,6" Margin="8,0,0,0" FontSize="11" Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- BP Check Section -->
        <Border Grid.Row="6" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="15" 
                CornerRadius="4">
            <StackPanel>
                <CheckBox x:Name="BpCheckCheckBox" 
                          Content="Import BP Check (160+ checks)"
                          FontSize="13"
                          FontWeight="SemiBold"
                          Checked="BpCheckCheckBox_Changed"
                          Unchecked="BpCheckCheckBox_Changed"/>
                
                <TextBlock Text="Microsoft Tiger Team Best Practices Check (usp_bpcheck)"
                           FontSize="11"
                           Foreground="#666666"
                           Margin="22,3,0,8"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="22,0,10,0" FontSize="11"/>
                    <TextBox x:Name="BpCheckPathTextBox" Grid.Column="1" Padding="6" FontSize="11" IsReadOnly="True" Background="#F5F5F5"/>
                    <Button x:Name="BrowseBpCheckButton" Grid.Column="2" Content="Browse..." Click="BrowseBpCheckButton_Click"
                            Padding="8,6" Margin="8,0,0,0" FontSize="11" Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Duplicate Detection Option -->
        <StackPanel Grid.Row="7" Margin="0,15,0,0">
            <CheckBox x:Name="DetectDuplicatesCheckBox" 
                      Content="Detect and disable duplicate checks (90%+ similarity)"
                      FontSize="12"
                      IsChecked="True"/>
            <TextBlock Text="Checks with similar queries or names will be imported but disabled"
                       FontSize="10"
                       Foreground="#888888"
                       Margin="22,2,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="ImportButton" 
                    Content="Import Selected" 
                    Click="ImportButton_Click"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Background="#107C10"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    IsEnabled="False"/>
            
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Click="CancelButton_Click"
                    Padding="12,8"
                    FontSize="13"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
