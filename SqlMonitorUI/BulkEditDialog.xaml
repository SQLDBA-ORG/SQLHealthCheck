<Window x:Class="SqlMonitorUI.BulkEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk Edit Checks" 
        Height="500" 
        Width="550"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Bulk Edit Checks" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"/>
            <TextBlock x:Name="SelectedCountText"
                       Text="0 checks selected" 
                       FontSize="13" 
                       Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Instructions -->
        <Border Grid.Row="1" 
                Background="#E3F2FD" 
                BorderBrush="#90CAF9" 
                BorderThickness="1" 
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,15">
            <TextBlock Text="Check the boxes next to properties you want to change, then select the new value. Only checked properties will be modified."
                       TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="#1565C0"/>
        </Border>

        <!-- Edit Options -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Category -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChangeCategoryCheck" 
                                  Content="Change Category"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Checked="ChangeCheck_Changed"
                                  Unchecked="ChangeCheck_Changed"/>
                        <ComboBox x:Name="CategoryCombo"
                                  IsEnabled="False"
                                  Margin="25,8,0,0"
                                  Padding="8,6"
                                  FontSize="13">
                            <ComboBoxItem Content="Backup"/>
                            <ComboBoxItem Content="Security"/>
                            <ComboBoxItem Content="Performance"/>
                            <ComboBoxItem Content="Configuration"/>
                            <ComboBoxItem Content="Integrity"/>
                            <ComboBoxItem Content="Reliability"/>
                            <ComboBoxItem Content="Storage"/>
                            <ComboBoxItem Content="Memory"/>
                            <ComboBoxItem Content="Custom"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Severity -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChangeSeverityCheck" 
                                  Content="Change Severity"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Checked="ChangeCheck_Changed"
                                  Unchecked="ChangeCheck_Changed"/>
                        <ComboBox x:Name="SeverityCombo"
                                  IsEnabled="False"
                                  Margin="25,8,0,0"
                                  Padding="8,6"
                                  FontSize="13">
                            <ComboBoxItem Content="Critical"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Info"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Enabled -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChangeEnabledCheck" 
                                  Content="Change Enabled State"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Checked="ChangeCheck_Changed"
                                  Unchecked="ChangeCheck_Changed"/>
                        <ComboBox x:Name="EnabledCombo"
                                  IsEnabled="False"
                                  Margin="25,8,0,0"
                                  Padding="8,6"
                                  FontSize="13">
                            <ComboBoxItem Content="Enabled" Tag="True"/>
                            <ComboBoxItem Content="Disabled" Tag="False"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Execution Type -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChangeExecutionTypeCheck" 
                                  Content="Change Execution Type"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Checked="ChangeCheck_Changed"
                                  Unchecked="ChangeCheck_Changed"/>
                        <ComboBox x:Name="ExecutionTypeCombo"
                                  IsEnabled="False"
                                  Margin="25,8,0,0"
                                  Padding="8,6"
                                  FontSize="13">
                            <ComboBoxItem Content="Binary (0/1)" Tag="Binary"/>
                            <ComboBoxItem Content="Row Count" Tag="RowCount"/>
                            <ComboBoxItem Content="Info Only" Tag="InfoOnly"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Priority -->
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="15">
                    <StackPanel>
                        <CheckBox x:Name="ChangePriorityCheck" 
                                  Content="Change Priority"
                                  FontWeight="SemiBold"
                                  FontSize="13"
                                  Checked="ChangeCheck_Changed"
                                  Unchecked="ChangeCheck_Changed"/>
                        <ComboBox x:Name="PriorityCombo"
                                  IsEnabled="False"
                                  Margin="25,8,0,0"
                                  Padding="8,6"
                                  FontSize="13">
                            <ComboBoxItem Content="1 - Highest" Tag="1"/>
                            <ComboBoxItem Content="2 - High" Tag="2"/>
                            <ComboBoxItem Content="3 - Medium" Tag="3"/>
                            <ComboBoxItem Content="4 - Low" Tag="4"/>
                            <ComboBoxItem Content="5 - Lowest" Tag="5"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Apply Changes" 
                    Click="ApplyButton_Click"
                    Padding="20,12"
                    Margin="0,0,10,0"
                    Background="#107C10"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Padding="20,12"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
