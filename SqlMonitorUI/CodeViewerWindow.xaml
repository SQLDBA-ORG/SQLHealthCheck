<Window x:Class="SqlMonitorUI.CodeViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Code Viewer" 
        Height="600" 
        Width="800"
        WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner"
        Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="TitleText"
                           Text="Code Viewer" 
                           Foreground="White" 
                           FontSize="16"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                <Button x:Name="CopyButton"
                        Content="ðŸ“‹ Copy to Clipboard"
                        Click="CopyButton_Click"
                        Margin="20,0,0,0"
                        Padding="10,5"
                        Background="White"
                        BorderThickness="0"
                        FontSize="12"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Code Display -->
        <TextBox Grid.Row="1"
                 x:Name="CodeTextBox"
                 IsReadOnly="True"
                 FontFamily="Consolas"
                 FontSize="12"
                 Padding="15"
                 Background="#FAFAFA"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"/>

        <!-- Close Button -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <Button x:Name="CloseButton"
                    Content="Close"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right"
                    Padding="20,8"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
        </Border>
    </Grid>
</Window>
